<p id="notice"><%= notice %></p>

<h1>Heros</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Atk</th>
      <th>Hp</th>
      <th>Def</th>
      <th>Speed</th>
      <th>Class</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @heros.each do |hero| %>
      <tr>
        <td><%= hero.name %></td>
        <td><%= hero.atk %></td>
        <td><%= hero.hp %></td>
        <td><%= hero.defense %></td>
        <td><%= hero.speed %></td>
        <td><%= hero.kind %></td>
        <td><%= hero.user.name %></td>
        <td><%= link_to 'Show', hero %></td>
        <td><%= link_to 'Edit', edit_hero_path(hero) %></td>
        <td><%= link_to 'Destroy', hero, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

